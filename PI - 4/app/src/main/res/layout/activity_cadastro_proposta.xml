<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroPropostaActivity">

    <LinearLayout
        android:id="@+id/layout_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivImagem"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        tools:srcCompat="@tools:sample/avatars" />
    <Button
        android:id="@+id/btGaleria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"

        android:text="Selecionar foto" />
    </LinearLayout>

    <EditText
        android:id="@+id/tituloProposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
       android:layout_below="@id/layout_horizontal"
        android:ems="10"
        android:hint="Título Proposta"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="65dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefone"
        android:inputType="phone"
        android:layout_below="@+id/tituloProposta"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/descricaoProposta"
        android:layout_width="332dp"
        android:layout_height="123dp"
        android:ems="10"
        android:hint="Descrição"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        android:layout_below="@id/telefone"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnCadastroPropostas"
        android:layout_width="145dp"
        android:layout_height="74dp"
        android:text="Cadastrar"
        tools:ignore="MissingConstraints"
        android:layout_below="@id/descricaoProposta"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>